{
  "version": 2,
  "builds": [
    { "src": "api/index.php", "use": "@vercel/php@0.7.4" },
    { "src": "resources/js/**/*", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/build/(.*)", "dest": "/public/build/$1" },
    { "src": "/(.*)", "dest": "/api/index.php" }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": "public"
}
